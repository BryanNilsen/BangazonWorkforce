@model BangazonWorkforce.Models.Employee

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsSupervisor)
        </dt>
        <dd class="col-sm-10">
            @(Model.IsSupervisor ? "yes" : "no")
            @*@Html.DisplayFor(model => model.IsSupervisor)*@
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DepartmentId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Computer)
        </dt>
        <dd class="col-sm-10">
            @(Model.Computer is null ? "Not Assigned" : Model.Computer.Manufacturer + ' ' + Model.Computer.Make)
            @*@Html.DisplayFor(model => model.Computer.Make )*@
        </dd>
    </dl>
    @if (Model.TrainingPrograms.Count > 0)
    {
        <h5>Training Programs</h5>
        <dl class="row">
            <dt class="col-sm-6">
                Name
            </dt>
            <dt class="col-sm-6">
                Start Date
            </dt>
        </dl>
        @foreach (var tp in Model.TrainingPrograms)
        {
            string trainingDateStyle = tp.EndDate < DateTime.Today
                ? "background-color: #eeeeee" 
                : "background-color: #9ef5b1";
            <dl class="row" style="@trainingDateStyle">
                <dd class="col-sm-6">@tp.Name</dd>
                <dd class="col-sm-6">@tp.StartDate</dd>
            </dl>
        }
    }
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    @Html.ActionLink("Delete", "Delete", new { id = Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
